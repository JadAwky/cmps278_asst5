<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do App</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div>
        <h1 class="m-2 text-center">To Do App</h1>
    </div>

    <div>
        <form action="/task" method="post">
            <div class="form-group m-4">
                <label for="task">Enter a task: </label>
                <input type="text" class="form-control" id="task">
                <button type="submit" class="btn btn-primary mt-1">Save</button>
            </div>
        </form>
    </div>

    <div class="m-4">
        <table class="table">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Todo item</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
				<% tasks.forEach(task=> { %>
                <tr>
                    <td class="font-weight-bold"><%= task._id %></td>
                    <td><%= task.Description %></td>
                    <td><%= getStatus(task) %></td>
                    <td>
                        <div class="form-inline">
                            <form onsubmit="deleteTask(`<%= task._id %>`)">
                                <button type="submit" class="btn btn-danger mr-1" onclick="location.reload();">Delete</button>
                            </form>
                            <form onsubmit="toggleComplete(`<%= task._id %>`)">
                                <button type="submit" class="btn btn-success"><%= task.isComplete ? 'InComplete' : 'Complete' %></button>
                            </form>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="font-weight-bold">2</td>
                    <td>Renew car insurance</td>
                    <td>In progress</td>
                    <td>
                        <div class="form-inline">
                            <form action="/task/2" method="delete">
                                <button type="submit" class="btn btn-danger mr-1">Delete</button>
                            </form>
                            <form action="/task/toggle/1">
                                <button type="submit" class="btn btn-success">Incomplete</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>